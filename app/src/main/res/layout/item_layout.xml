<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="398dp"
        android:layout_height="256dp"
        android:background="#9E8BBF"
        android:padding="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/imageViewImageData"
            android:layout_width="112dp"
            android:layout_height="106dp"
            android:layout_marginTop="56dp"
            android:foregroundGravity="center_vertical"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="222dp"
            android:layout_height="219dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewImageData"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewIdHeading"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="2dp"
                    android:text="ID: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textViewImageDataID"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="#4C3B2B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewTitleHeading"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="2dp"
                    android:text="Title: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textViewImageDataTitle"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="#4C3B2B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textViewUrlHeading"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="2dp"
                    android:text="URL: "
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textViewImageDataURL"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:padding="2dp"
                    android:text="TextView"
                    android:textColor="#4C3B2B" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>